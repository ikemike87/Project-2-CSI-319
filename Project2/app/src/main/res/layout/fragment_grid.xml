<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/reset_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/menu_button_border"
            android:contentDescription="@string/content_desc_reset_image_button"
            android:padding="10dp"
            android:src="@drawable/reset" />

        <ImageButton
            android:id="@+id/start_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/menu_button_border"
            android:contentDescription="@string/content_desc_play_image_button"
            android:padding="10dp"
            android:src="@drawable/start" />

        <ImageButton
            android:id="@+id/stop_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/menu_button_border"
            android:contentDescription="@string/content_desc_stop_image_button"
            android:padding="10dp"
            android:src="@drawable/stop" />

        <Button
            android:id="@+id/clone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/menu_button_border"
            android:padding="10dp"
            android:text="@string/clone_button" />
    </LinearLayout>
</LinearLayout>